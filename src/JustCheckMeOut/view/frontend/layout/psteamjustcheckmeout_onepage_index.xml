<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="checkout.onepage.script-alpine"
                   template="PerspectiveTeam_JustCheckMeOut::script-alpine.phtml">
            </block>
            <block class="Magento\Framework\View\Element\Template"
                   name="checkout.onepage.api"
                   template="PerspectiveTeam_JustCheckMeOut::api.phtml">
                <arguments>
                    <argument name="ssrGqlViewModel"
                              xsi:type="object">PerspectiveTeam\SsrGraphql\ViewModel\SsrGraphqlViewModel
                    </argument>
                    <argument name="quoteViewModel"
                              xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                    </argument>
                    <argument name="headlessComponentRenderer"
                              xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                    </argument>
                </arguments>
                <container name="checkout.onepage.api.after"/>
            </block>
        </referenceContainer>
    </body>
</page>
