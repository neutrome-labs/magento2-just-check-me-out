<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="checkout.onepage"
                   template="PerspectiveTeam_JustCheckMeOutThemeMinimal::onepage/main.phtml">
                <arguments>
                    <argument name="quoteViewModel"
                              xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                    </argument>
                    <argument name="headlessComponentRenderer"
                              xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                    </argument>
                </arguments>
                <block class="Magento\Framework\View\Element\Template"
                       name="checkout.onepage.address-form" as="unified-address-form"
                       template="PerspectiveTeam_JustCheckMeOutThemeMinimal::component/unified-address-form.phtml">
                    <arguments>
                        <argument name="quoteViewModel"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                        </argument>
                        <argument name="headlessComponentRenderer"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="checkout.onepage.shipping-method-list" as="shipping-method-list"
                       template="PerspectiveTeam_JustCheckMeOutThemeMinimal::component/shipping-method-list.phtml">
                    <arguments>
                        <argument name="quoteViewModel"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                        </argument>
                        <argument name="headlessComponentRenderer"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="checkout.onepage.payment-method-list" as="payment-method-list"
                       template="PerspectiveTeam_JustCheckMeOutThemeMinimal::component/payment-method-list.phtml">
                    <arguments>
                        <argument name="quoteViewModel"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                        </argument>
                        <argument name="headlessComponentRenderer"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="checkout.onepage.items" as="items"
                       template="PerspectiveTeam_JustCheckMeOutThemeMinimal::component/items.phtml">
                    <arguments>
                        <argument name="quoteViewModel"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                        </argument>
                        <argument name="headlessComponentRenderer"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="checkout.onepage.totals" as="totals"
                       template="PerspectiveTeam_JustCheckMeOutThemeMinimal::component/totals.phtml">
                    <arguments>
                        <argument name="quoteViewModel"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                        </argument>
                        <argument name="headlessComponentRenderer"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="checkout.onepage.place-button" as="place-button"
                       template="PerspectiveTeam_JustCheckMeOutThemeMinimal::component/place-button.phtml">
                    <arguments>
                        <argument name="quoteViewModel"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\QuoteViewModel
                        </argument>
                        <argument name="headlessComponentRenderer"
                                  xsi:type="object">PerspectiveTeam\JustCheckMeOut\ViewModel\HeadlessComponentRenderer
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
